{
  "name": "@jedmao/redux-mock-store",
  "version": "0.0.0",
  "description": "A mock store for testing your redux async action creators and middleware",
  "keywords": [
    "react",
    "redux",
    "mock",
    "store",
    "thunk",
    "test"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint src/**/*.{ts,tsx}",
    "prebuild": "npm run clean",
    "build": "tsc",
    "test": "jest --watch",
    "cover": "jest --coverage",
    "commit": "git-cz",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jedmao/redux-mock-store.git"
  },
  "author": "Jed Mao <jedmao@outlook.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jedmao/redux-mock-store/issues"
  },
  "homepage": "https://github.com/jedmao/redux-mock-store#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "jest --coverage"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{js,jsx}": [
      "git reset"
    ]
  },
  "prettier": {
    "arrowParens": "avoid",
    "proseWrap": "always",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "lines": 100,
        "functions": 100
      }
    },
    "coverageReporters": [
      "json",
      "lcov"
    ],
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ]
  },
  "dependencies": {
    "@queso/kebab-case": "^1.0.1",
    "lodash.isplainobject": "^4.0.6",
    "ts-helpers": "^1.1.2"
  },
  "peerDependencies": {
    "redux": "*"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@jedmao/semantic-release-npm-github-config": "^1.0.6",
    "@jedmao/tsconfig": "^0.3.0",
    "@testing-library/react": "^8.0.4",
    "@types/jest": "^24.0.15",
    "@types/lodash.isfunction": "^3.0.6",
    "@types/lodash.isplainobject": "^4.0.6",
    "@types/node": "^12.6.2",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@types/redux": "^3.6.0",
    "@types/redux-thunk": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.0",
    "lodash.isfunction": "^3.0.9",
    "prettier": "^1.18.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "redux-thunk": "^2.3.0",
    "rimraf": "^2.6.3",
    "semantic-release": "^15.13.18",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.3"
  },
  "release": {
    "branch": "master",
    "extends": "@jedmao/semantic-release-npm-github-config"
  }
}
